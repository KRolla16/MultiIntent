<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity3">

    <Button
        android:id="@+id/buttonInternet"
        android:layout_width="107dp"
        android:layout_height="56dp"
        android:background="@android:color/transparent"
        android:text="Search!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.792"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextWeb"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewAbout"
        android:layout_width="407dp"
        android:layout_height="89dp"
        android:gravity="center"
        android:text="About us"
        android:textColor="@color/white"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Your Index and name"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewAbout"
        tools:layout_editor_absoluteX="0dp" />

    <ImageButton
        android:id="@+id/buttonLocate"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_marginTop="112dp"
        android:background="@android:color/transparent"
        android:text="Localization"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.212"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAbout"
        app:srcCompat="@android:drawable/ic_dialog_map" />

    <ImageButton
        android:id="@+id/buttonContacts"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_marginTop="112dp"
        android:background="@android:color/transparent"
        android:text=" Go to your Contacts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toEndOf="@+id/buttonLocate"
        app:layout_constraintTop_toBottomOf="@+id/textViewAbout"
        app:srcCompat="@android:drawable/stat_sys_phone_call" />


    <Button
        android:id="@+id/buttonWeb"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="64dp"
        android:background="@android:color/transparent"
        android:text="Visit"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextWeb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLocate"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/buttonYoutube"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/yt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toEndOf="@+id/buttonWeb"
        app:layout_constraintTop_toBottomOf="@+id/buttonContacts" />

    <EditText
        android:id="@+id/editTextTextWeb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:layout_marginBottom="46dp"
        android:ems="10"
        android:hint="@string/website"
        android:inputType="textPersonName"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextWidth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonYoutube" />

    <Button
        android:id="@+id/buttonAnotherActivity"
        android:layout_width="128dp"
        android:layout_height="94dp"
        android:background="@android:color/transparent"
        android:text="Go to location activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextWeb"
        app:layout_constraintVertical_bias="0.351" />
</androidx.constraintlayout.widget.ConstraintLayout>